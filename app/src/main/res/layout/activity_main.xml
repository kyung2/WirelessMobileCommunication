<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eom.hyunkyungapplication.MainActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="병사이즈"
        android:textSize="20pt" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="18dp"
        android:padding="0sp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/cup_50" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_centerHorizontal="true"
        android:padding="0sp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/cup_180" />


    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginStart="69dp"
        android:layout_toEndOf="@+id/imageButton2"
        android:padding="0sp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/cup_300" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton1"
        android:layout_centerVertical="true"
        android:text="비율"
        android:textSize="20pt" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:text="PayMent"
        android:textSize="12pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:maxHeight="40dp"
            app:srcCompat="@drawable/soju" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:max="10"
            android:progress="5" />


        <ImageView
            android:id="@+id/imageView2"

            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/beer" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true">



        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="@string/soju"
            android:textSize="12pt" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center|left"
            android:text="   5"
            android:textSize="10pt" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="맥주"
            android:textSize="12pt" />



        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="   5"
            android:textSize="10pt" />



    </LinearLayout>



</RelativeLayout>
